{
  "name": "pedaki",
  "version": "0.4.2-beta.6",
  "private": true,
  "repository": "https://github.com/PedakiHQ/pedaki",
  "homepage": "https://www.pedaki.fr",
  "author": "Nathan David <me@vahor.fr>",
  "license": "CC-BY-NC-SA-4.0",
  "keywords": [
    "pedaki"
  ],
  "scripts": {
    "start": "dotenv -- turbo run start",
    "build": "dotenv -- turbo run build",
    "test": "NODE_ENV=test dotenv -e .env.test -c -- turbo run test",
    "test:coverage": "NODE_ENV=test dotenv -e .env.test -c -- turbo run test:coverage",
    "test:watch": "NODE_ENV=test dotenv -e .env.test -c -- turbo run test:watch",
    "dev": "dotenv -- turbo run dev",
    "dev:mail": "dotenv -- turbo run dev --filter mailer",
    "lint": "SKIP_ENV_VALIDATION=true && turbo run lint",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "format": "turbo run format",
    "clean": "turbo run clean && rimraf node_modules",
    "check": "SKIP_ENV_VALIDATION=true && turbo typecheck lint format:check test",
    "prepare": "husky install",
    "prepare-release": "node --no-warnings=ExperimentalWarning scripts/prepare-release.mjs",
    "preprepare-release": "pnpm check",
    "publish-release": "node --no-warnings=ExperimentalWarning scripts/publish-release.mjs"
  },
  "devDependencies": {
    "@manypkg/get-packages": "^2.2.0",
    "@types/fs-extra": "^11.0.3",
    "@types/node": "^18.18.4",
    "@vitest/coverage-v8": "^0.34.6",
    "chalk": "^5.3.0",
    "cpy": "^10.1.0",
    "dotenv-cli": "latest",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "inquirer": "^9.2.11",
    "lint-staged": "^15.0.2",
    "open": "^9.1.0",
    "ora": "^7.0.1",
    "rimraf": "latest",
    "throat": "^6.0.2",
    "tsconfig-replace-paths": "^0.0.14",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0",
    "pnpm": ">=8.0.0",
    "yarn": "use-pnpm",
    "npm": "use-pnpm"
  },
  "packageManager": "pnpm@8.10.2"
}
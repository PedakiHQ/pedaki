{
  "name": "@pedaki/common",
  "version": "0.0.3",
  "author": "Nathan David <me@vahor.fr>",
  "repository": {
    "type": "git",
    "url": "https://github.com/PedakiHQ/pedaki",
    "directory": "packages/common"
  },
  "homepage": "https://www.pedaki.fr",
  "license": "MIT",
  "private": false,
  "type": "module",
  "publishConfig": {
    "directory": "dist"
  },
  "scripts": {
    "build": "tsup && npm run copy-static",
    "copy-static": "copyfiles -u 1 \"src/**/*.{css,scss,svg,config.ts}\" dist && node ../../scripts/prepare-dist.js",
    "lint": "eslint . --cache",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write . --cache",
    "format:check": "prettier --check . --cache"
  },
  "devDependencies": {
    "@pedaki/eslint-config": "0.0.5",
    "@pedaki/prettier-config": "0.0.5",
    "@types/bcryptjs": "^2.4.3",
    "@types/memory-cache": "latest",
    "@types/react": "^18.2.21",
    "react": "^18.2.0",
    "tsup": "^7.2.0"
  },
  "peerDependencies": {
    "bcryptjs": "^2.4.3",
    "memory-cache": "^0.2.0",
    "nanoid": "^5.0.0",
    "sonner": "^0.7.0"
  },
  "prettier": "@pedaki/prettier-config"
}

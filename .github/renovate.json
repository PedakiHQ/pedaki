{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":preserveSemverRanges", ":prHourlyLimit2"],
  "ignorePaths": ["node_modules"],
  "nvm": {
    "enabled": true
  },
  "npm": {
    "rollbackPrs": true
  },
  "packageRules": [
    {
      "groupName": "react-email",
      "matchPackageNames": [
        "react-email",

        "@react-email/button",
        "@react-email/head",
        "@react-email/html",
        "@react-email/link",
        "@react-email/render",
        "@react-email/tailwind"
      ]
    }
  ]
}
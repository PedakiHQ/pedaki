{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":preserveSemverRanges", ":prHourlyLimit2"],
  "ignorePaths": ["node_modules"],
  "nvm": {
    "enabled": true
  },
  "npm": {
    "rollbackPrs": true
  },
  "packageRules": [
    {
      "groupName": "react-email",
      "matchPackagePatterns": [
        "^react-email",
        "^@react-email/*"
      ]
    },
    {
      "groupName": "radix-ui",
      "matchPackagePatterns": [
        "^@radix-ui/*"
      ]
    }
  ]
}